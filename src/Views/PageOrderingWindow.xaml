<Window x:Class="PdfMerger.Views.PageOrderingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfMerger.Views"
        xmlns:viewModels="clr-namespace:PdfMerger.ViewModels"
        mc:Ignorable="d"
        Title="Reorder Pages"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner">

  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="Padding"
              Value="10,5"/>
      <Setter Property="Margin"
              Value="5"/>
    </Style>
  </Window.Resources>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Grid.Row="0"
                Margin="0,0,0,10">
      <TextBlock Text="Reorder Pages"
                 FontSize="24"
                 FontWeight="Bold"
                 Margin="0,0,0,10"/>
      <TextBlock Text="Drag and drop pages to reorder them, or use the arrow buttons."
                 TextWrapping="Wrap"/>
    </StackPanel>

    <!-- Page List -->
    <ListView Grid.Row="1"
              ItemsSource="{Binding Pages}"
              x:Name="PageListView"
              BorderThickness="1"
              BorderBrush="#DDDDDD"
              SelectionMode="Single"
              AllowDrop="True"
              Drop="ListView_Drop"
              DragOver="ListView_DragOver"
              PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
              PreviewMouseMove="ListView_PreviewMouseMove">
      <ListView.ItemTemplate>
        <DataTemplate>
          <Grid Margin="5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Page Number -->
            <Border Grid.Column="0"
                    Background="#F0F0F0"
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    CornerRadius="20">
              <TextBlock Text="{Binding DisplayOrder}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         FontWeight="SemiBold"/>
            </Border>

            <!-- Page Info -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
              <TextBlock>
                <Run Text="From: "/>
                <Run Text="{Binding SourceFileName, Mode=OneWay}"/>
              </TextBlock>
              <TextBlock>
                <Run Text="Page "/>
                <Run Text="{Binding PageNumber, Mode=OneWay}"/>
                <Run Text=" of source file"/>
              </TextBlock>
            </StackPanel>

            <!-- Controls -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal">
              <Button Content="▲"
                      Command="{Binding DataContext.MoveUpCommand, 
                                RelativeSource={RelativeSource AncestorType=ListView}}"
                      CommandParameter="{Binding}"
                      Padding="5,0"
                      Margin="2"/>
              <Button Content="▼"
                      Command="{Binding DataContext.MoveDownCommand,
                                RelativeSource={RelativeSource AncestorType=ListView}}"
                      CommandParameter="{Binding}"
                      Padding="5,0"
                      Margin="2"/>
              <Button Content="✕"
                      Command="{Binding DataContext.RemovePageCommand,
                                RelativeSource={RelativeSource AncestorType=ListView}}"
                      CommandParameter="{Binding}"
                      Padding="5,0"
                      Margin="2"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

    <!-- Buttons -->
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
      <Button Content="Cancel"
              Command="{Binding CancelCommand}"/>
      <Button Content="Apply Order"
              Command="{Binding ApplyOrderCommand}"
              Background="#007ACC"
              Foreground="White"/>
    </StackPanel>
  </Grid>
</Window> 